---
import { EMAIL } from "../consts";
import ThemeToggle from "./ThemeToggle.astro";
---

<header class="mb-6" transition:name="header">
  <!-- Título principal -->
  <h1 class="text-xl font-bold text-zinc-800 dark:text-zinc-100 mb-4">
  El blog de Alsina
  </h1>

  <!-- Barra de navegación -->
  <div class="flex items-center justify-between">
    <nav class="flex items-center gap-4">
      <a href="/">principal</a>
      <a href="/posts">posts</a>
      <a href={`mailto:${EMAIL}`}>email</a>
    </nav>
    <ThemeToggle />
  </div>
</header>

<style>
  a {
    @apply font-medium text-zinc-500 hover:text-zinc-900 hover:underline dark:hover:text-zinc-100;
  }

  h1 a {
    @apply text-zinc-800 dark:text-zinc-100 no-underline hover:underline;
  }
</style>
